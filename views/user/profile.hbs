<div class="profile-section">
  <div class="profile-container">
    <h2>Edit your profile</h2>
    <form method="POST" action="/user/profile">
      <label>First name:</label>
      <input type="text" name="firstName" placeholder="Your first name" value="{{currentUser.firstName}}">
      <!-- <div class="caption">Error</div> -->

      <label>Email:</label>
      <input type="text" name="email" placeholder="Your email adress" value="{{currentUser.email}}">
      <!-- <div class="caption">Error</div> -->

      <label>Password:</label>
      <input type="password" name="password" placeholder="*********">
      <!-- <div class="caption">Error</div> -->

      <label>New password:</label>
      <input type="password" name="newPassword" placeholder="*********">
      <!-- <div class="caption">Error</div> -->

      <label>Check your new password:</label>
      <input type="password" name="newPasswordChecked" placeholder="Enter your new password">
      <!-- <div class="caption">Error</div> -->      
      <div class="profile-buttons">
        <a href="/user/dashboard">â‡¤ Back</a>
        <button class="btn" id="edit-btn" type="submit">Edit</button>
      </div>
    </form>       
  </div>  
</div>